<div class="container" style="max-width: 800px; margin: 0 auto; padding: 20px;">
  <%= link_to "â† Back to Blogs", blogs_path, style: "text-decoration: none; color: #007bff; margin-bottom: 20px; display: inline-block;" %>

  <div style="border: 1px solid #ddd; padding: 30px; border-radius: 8px; background: white; margin-top: 20px;">
    <h1 style="margin-top: 0;"><%= @blog.title %></h1>
    <p style="white-space: pre-wrap; line-height: 1.6; color: #333;"><%= @blog.description %></p>

    <% if user_signed_in? %>
      <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #eee; display: flex; gap: 10px;">
        <%= link_to "Edit", edit_blog_path(@blog), style: "background: #ffc107; color: #333; padding: 10px 20px; text-decoration: none; border-radius: 4px;" %>
        <%= link_to "Delete", blog_path(@blog), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this blog?" }, style: "background: #dc3545; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;" %>
      </div>
    <% end %>
  </div>
</div>
