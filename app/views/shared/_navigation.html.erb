<nav class="navbar">
  <div class="nav-container">
    <!-- Logo/Brand -->
    <div class="nav-brand">
      <%= link_to "DeviseApp", root_path %>
    </div>

    <!-- Main Navigation Links -->
    <ul class="nav-links">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Blogs", blogs_path %></li>

      <% if user_signed_in? %>
        <li><%= link_to "New Blog", new_blog_path %></li>
      <% end %>
    </ul>

    <!-- User Authentication Section -->
    <div class="nav-auth">
      <% if user_signed_in? %>
        <!-- Signed In: Show user info and dropdown menu -->
        <div class="user-menu">
          <span class="user-email">
            <%= current_user.email %>
          </span>
          <%= link_to "Profile", edit_user_registration_path, class: "nav-link" %>
          <%= link_to "Logout", destroy_user_session_path,
                      data: { turbo_method: :delete },
                      class: "nav-link logout-link" %>
        </div>
      <% else %>
        <!-- Not Signed In: Show login and sign up -->
        <div class="auth-buttons">
          <%= link_to "Login", new_user_session_path, class: "nav-link login-link" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link signup-link" %>
        </div>
      <% end %>
    </div>
  </div>
</nav>
