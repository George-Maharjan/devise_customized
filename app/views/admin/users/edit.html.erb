<div class="container" style="max-width: 600px; margin: 0 auto; padding: 20px;">
  <h1 style="margin-bottom: 30px;">Edit User: <%= @user.username %></h1>

  <%= form_with(model: [:admin, @user], local: true) do |form| %>
    <% if @user.errors.any? %>
      <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
        <h3 style="margin-top: 0;">
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being updated:
        </h3>
        <ul style="margin-bottom: 0;">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= form.label :username, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.text_field :username, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 16px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= form.label :email, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.email_field :email, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 16px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= form.label :role, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.select :role, User.roles.keys.map { |role| [role.titleize, role] }, { include_blank: false }, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 16px;" %>
    </div>

    <div style="background: #e7f3ff; border-left: 4px solid #007bff; padding: 15px; margin-bottom: 20px; border-radius: 4px;">
      <p style="margin: 0; font-size: 14px; color: #004085;">
        <strong>Current Status:</strong> <%= @user.active? ? 'Active' : 'Inactive' %>
      </p>
      <p style="margin: 8px 0 0 0; font-size: 12px; color: #004085;">
        Use the user list to activate/deactivate this user.
      </p>
    </div>

    <div style="display: flex; gap: 10px;">
      <%= form.submit "Update User", style: "background: #28a745; color: white; padding: 10px 30px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
      <%= link_to "Cancel", admin_users_path, style: "background: #6c757d; color: white; padding: 10px 30px; text-decoration: none; border-radius: 4px; display: inline-block;" %>
    </div>
  <% end %>
</div>
